#!/usr/bin/env bash
# This script installs Nginx on a new Ubuntu server, configures it to listen on port 80,
# and serves a page with the text "Hello World!" at the root URL.

# Ensure the script is run as root
if [ "$(id -u)" -ne 0 ]; then
    echo "This script must be run as root."
    exit 1
fi

# Update the package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Create a custom index.html file with "Hello World!" content
echo "Hello World!" > /var/www/html/index.html

# Ensure Nginx is started (using the init.d system, since systemctl is not allowed)
service nginx start

# Reload Nginx to apply changes
service nginx reload
